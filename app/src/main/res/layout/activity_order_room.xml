<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".oderActivity.OrderRoomActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="#F5FF9F"
        android:gravity="center">
        <Button
            android:drawableRight="@drawable/ic_baseline_navigate_before_24"
            android:id="@+id/btnleft"
            android:background="#003700B3"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/viewimg"
            android:layout_width="320dp"
            android:layout_height="180dp"/>
        <Button
            android:background="#003700B3"
            android:drawableLeft="@drawable/ic_baseline_navigate_next_24"
            android:id="@+id/btnright"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ord_add"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="add"/>
        <TextView
            android:id="@+id/ord_mota"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="mô tả"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#089C3E"
            android:id="@+id/an_r2"
            android:text="      Ngày đặt phòng"/>
        <Button
            android:id="@+id/ord_day"
            android:layout_width="360dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Số phòng"
                android:textColor="#6B00FF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttong"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_button"
                android:text="-"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="197dp"
                tools:layout_editor_absoluteY="307dp"></Button>

            <TextView
                android:id="@+id/ord_r1"
                android:layout_width="80dp"
                android:textColor="#6B00FF"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="237dp"
                tools:layout_editor_absoluteY="307dp" />

            <Button
                android:id="@+id/buttont"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_button"
                android:text="+"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="317dp"
                tools:layout_editor_absoluteY="307dp"></Button>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:id="@+id/an_r1"
                android:textColor="#C66D00"
                android:layout_height="match_parent"
                android:text="Số ngày"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttongd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_button"
                android:text="-"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="197dp"
                tools:layout_editor_absoluteY="307dp"></Button>

            <TextView
                android:id="@+id/ord_r2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#C66D00"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="237dp"
                tools:layout_editor_absoluteY="307dp" />

            <Button
                android:id="@+id/buttontd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_button"
                android:text="+"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="317dp"
                tools:layout_editor_absoluteY="307dp"></Button>
        </LinearLayout>
        <TextView
            android:id="@+id/ord_r_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="giá"
            android:textSize="20dp"
            android:gravity="center">
        </TextView>
        <Button
            android:id="@+id/button_order_room"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:background="@drawable/btn_y"
            android:text="Đặt phòng"/>
    </LinearLayout>

</LinearLayout>