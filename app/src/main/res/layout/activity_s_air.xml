<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oderActivity.MyAirActivity">

    <TextView
        android:id="@+id/stextViewNameAir"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="Hãng hàng không"
        android:textColor="#FF00FA"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <TextView
        android:id="@+id/stextViewKhachHang"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="Tên khách hàng"
        android:textColor="#DA0303"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/stextViewNameAir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:id="@+id/stextViewIDAir"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:hint="Mã chuyến bay"
        app:layout_constraintStart_toStartOf="@+id/stextViewNameAir"
        app:layout_constraintTop_toBottomOf="@+id/stextViewNameAir"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/stextViewTypeAir"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="Type"
        app:layout_constraintBottom_toBottomOf="@+id/stextViewIDAir"
        app:layout_constraintEnd_toEndOf="@+id/stextViewNameAir"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/slinearLayout4"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stextViewTypeAir">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Form" />

        <TextView
            android:id="@+id/stextViewFormAir"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Form" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="To" />

        <TextView
            android:id="@+id/stextViewToAir"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="To" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Khời hành" />

        <TextView
            android:id="@+id/stextViewTimeSAir"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Form" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Khứ hồi" />

        <TextView
            android:id="@+id/stextViewTimeBAir"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Form" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintBottom_toTopOf="@+id/sbuttonOrderTicket"
        app:layout_constraintTop_toBottomOf="@+id/slinearLayout4"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/slayoutpt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Số vé phổ thông"
                    android:textColor="#32DA03" />

                <TextView
                    android:id="@+id/sl_air_pt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="giá pt" />
            </LinearLayout>

            <TextView
                android:id="@+id/ppt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="price_pt"
                android:textColor="#32DA03"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/slayouttg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Số vé thương gia"
                    android:textColor="#FFC800" />

                <TextView
                    android:id="@+id/sl_air_tg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="giá tg" />
            </LinearLayout>

            <TextView
                android:id="@+id/ptg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="price_tg"
                android:textColor="#FFC800"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/slayoutn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Số vé hạng nhất"
                    android:textColor="#DA0303" />

                <TextView
                    android:id="@+id/sl_air_hn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="giá hạng nhất" />
            </LinearLayout>

            <TextView
                android:id="@+id/pn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="price_n1"
                android:textColor="#DA0303"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/stextViewSum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tổng"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_huy_OrderTicket"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_huy"
        android:text="hủy vé"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>