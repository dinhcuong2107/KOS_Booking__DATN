<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".oderActivity.MyRoomActivity">
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/text_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#FF0000"
        android:text="user"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:drawableRight="@drawable/ic_baseline_navigate_before_24"
            android:id="@+id/my_btn_left"
            android:background="#003700B3"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/my_view_img"
            android:layout_width="320dp"
            android:layout_height="180dp"/>
        <Button
            android:background="#003700B3"
            android:drawableLeft="@drawable/ic_baseline_navigate_next_24"
            android:id="@+id/my_btn_right"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textadd"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="add"/>
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/text_mt"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="mô tả"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#089C3E"
            android:text="      Ngày bắt đầu"/>
        <TextView
            android:text="abc"
            android:id="@+id/my_ord_day"
            android:textColor="#089C3E"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="360dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textColor="#6B00FF"
                android:text="Số phòng"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textsl"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#6B00FF"
                android:text="1"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="237dp"
                tools:layout_editor_absoluteY="307dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Số ngày"
                android:textColor="#C66D00"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textsn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#C66D00"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="237dp"
                tools:layout_editor_absoluteY="307dp" />

        </LinearLayout>
        <TextView
            android:id="@+id/text_sum_ord_room_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="giá"
            android:textSize="30dp"
            android:textColor="#0021FF"
            android:gravity="center">
        </TextView>
        <Button
            android:id="@+id/my_button_huy_room"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_huy"
            android:textSize="20dp"
            android:textColor="#FF0000"
            android:text="hủy phòng"/>
    </LinearLayout>

</LinearLayout>