<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/buttonAddMain"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_control_point_24"
            android:orientation="horizontal" />
        <Button
            android:background="#FAF1A1"
            android:id="@+id/buttonDestination"
            android:layout_width="300dp"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:layout_height="40dp"
            android:orientation="horizontal" />
        <LinearLayout
            android:id="@+id/buttonSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_search_24"
            android:orientation="horizontal" />
    </LinearLayout>
    <ListView
        android:id="@+id/list_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="9"
        android:orientation="horizontal">
        <Button
            android:id="@+id/choose_air1"
            android:layout_width="match_parent"
            android:background="#ACEBFF"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:text="1 chiều"
            android:layout_height="match_parent"></Button>
        <Button
            android:id="@+id/buttonfun"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/custom_button_2" />
        <Button
            android:id="@+id/choose_air2"
            android:layout_width="match_parent"
            android:background="#ACEBFF"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:text="Khứ hồi"
            android:layout_weight="1"></Button>
    </LinearLayout>



</LinearLayout>