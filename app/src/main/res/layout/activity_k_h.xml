<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KHActivity">

    <LinearLayout
        android:id="@+id/linearLayoutKH"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#FFFAC9"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/kh_image_inf_avatar"
            android:layout_width="240dp"
            android:layout_height="240dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/kh_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutKH"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/kh_position"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="position"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/kh_name"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/kh_sex"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="giới tính"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kh_position"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/kh_CMND"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="CMND"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/kh_sex"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/kh_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="Date of birth"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/kh_CMND"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/kh_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="phonenumber"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/kh_date"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/kh_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="Email"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/kh_phone"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/kh_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="Address"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/kh_email"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>