<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    tools:context=".ManagerOrderActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_weight="9">
        <TextView
            android:id="@+id/textM0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="Đơn hàng">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3">
            <Button
                android:id="@+id/id_ticket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="#FFEAEA"
                android:text="Ticket"/>
            <Button
                android:id="@+id/id_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFEAEA"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Room"/>
            <Button
                android:id="@+id/id_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:background="#FFEAEA"
                android:layout_weight="1"
                android:text="Car"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFEAEA"
            android:orientation="horizontal"
            android:weightSum="12">
            <Button
                android:id="@+id/textpop"

                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#0003DAC5"
                android:text="Lọc đơn hàng"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/textM1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_search_24"
                android:layout_weight="10"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/id_list_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
    </ListView>
</LinearLayout>